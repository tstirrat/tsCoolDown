{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "jsx": "react",
    "jsxFactory": "Didact.createElement",
    "moduleResolution": "node",
    "rootDir": "./src/",
    "outDir": "addon/GeneratedSource",
    "typeRoots": [
      "node_modules/@wartoshika/wow-declarations/declarations",
      "node_modules/lua-types/5.1"
    ],
    "types": [
      "./src/@types/didact/",
      "./src/@types/ace3/"
    ]
  },
  "tstl": {
    "luaTarget": "5.1",
    "luaLibImport": "require",
    "luaPlugins": [
      {"name": "./src/ts_transformers/WowJsxTransformer.ts"},
      {"name": "./src/ts_transformers/RequirePreload.ts"}
    ]
  }
}
